@model IEnumerable<ProjetFinal__2037266.Models.Conducteur>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Acceuil</h1>
<p>
	Bonjour @ViewData["utilisateur"]
</p>
<p>
	<a asp-action="Create">Create New</a>
</p>

<p>
	<a asp-controller="Utilisateurs" asp-action="Inscription" class="btn btn-primary me-2">Inscription</a>
	<a asp-controller="Utilisateurs" asp-action="Connexion" class="btn btn-secondary me-2">Connexion</a>  
	<a asp-controller="Utilisateurs" asp-action="Deconnexion" class="btn btn-danger me-2">Deconnexion</a>
</p>
<p>
	<a asp-action="Index2">Conducteur par date</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nom)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Prenom)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DateNaissance)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PaysOrigine)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.NombreVictoires)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nom)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Prenom)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DateNaissance)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PaysOrigine)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.NombreVictoires)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.ConducteurId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.ConducteurId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.ConducteurId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
