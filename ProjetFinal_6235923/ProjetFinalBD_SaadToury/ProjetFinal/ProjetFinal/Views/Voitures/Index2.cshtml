@{
    ViewData["Title"] = "ConducteurParDate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Recherche de voitures</h2>

<form method="post" action="@Url.Action("Procedure")">
    <div class="form-group">
        <label for="carburant">Type de carburant</label>
        <input type="text" name="carburant" id="carburant" class="form-control" placeholder="Essence, Diesel, etc." />
    </div>

    <div class="form-group">
        <label for="disponible">Disponible</label>
        <select name="disponible" id="disponible" class="form-control">
            <option value="">-- Choisir --</option>
            <option value="true">Oui</option>
            <option value="false">Non</option>
        </select>
    </div>

    <div class="form-group">
        <label for="prixMax">Prix maximal</label>
        <input type="number" step="0.01" name="prixMax" id="prixMax" class="form-control" placeholder="Ex : 50000" />
    </div>

    <div class="form-group">
        <label for="categorie">Catégorie</label>
        <input type="text" name="categorie" id="categorie" class="form-control" placeholder="SUV, Berline, etc." />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Rechercher</button>
</form>

<hr />